@model IEnumerable<WNC.G06.Models.ProductModel>

<link rel="stylesheet" href="~/css/NewProduct.css" asp-append-version="true" />
<script src="~/js/DeleteProductJavaScript.js"></script>

@if (Model.Any())
{
    <div class="form-container-List">
        <h2 class="form-title">Danh sách sản phẩm</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Hình ảnh</th>
                    <th>Tên hàng</th>
                    <th>Đơn giá</th>
                    <th>Mô tả</th>
                    <th>Cửa hàng</th>
                    <th>Xử lý</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var product = Model.ElementAt(i);
                    var dimClass = product.Status ? "" : "dimmed";  // Áp dụng lớp dimmed nếu trạng thái là False

                    <tr id="product-row-@product.ProductID">
                        <td>@(i + 1)</td>
                        <td>
                            <img src="@ViewBag.ImagePaths[i]"
                                 alt="Ảnh sản phẩm"
                                 class="@dimClass"
                                 style="width:50px; height:50px; object-fit:cover;" />
                        </td>
                        <td class="@dimClass">@product.ProductName</td>
                        <td class="@dimClass">
                            @string.Format("{0:n0} VND", product.Price)
                            @if (product.Price >= 100000)
                            {
                                <button class="buttonDele" onclick="deleteProduct(@product.ProductID)">Giảm giá</button>
                            }
                        </td>
                        <td class="@dimClass">@product.Description</td>
                        <td class="@dimClass">@product.Cafe?.CafeName</td>
                        <td>
                            @if (product.Status)  // Nếu trạng thái là True, hiển thị nút "Xóa"
                            {
                                <button class="buttonDele" onclick="deleteProduct(@product.ProductID)">Xóa</button>
                            }
                            else  // Nếu trạng thái là False, hiển thị nút "Khôi phục"
                            {
                                <button class="buttonRestore" onclick="restoreProduct(@product.ProductID)">Khôi phục</button>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div class="form-container-List">
        <h2 class="form-title">Danh sách sản phẩm</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Hình ảnh</th>
                    <th>Tên hàng</th>
                    <th>Đơn giá</th>
                    <th>Mô tả</th>
                    <th>Cửa hàng</th>
                    <th>Xử lý</th>
                </tr>
            </thead>
        </table>
    </div>

    <p>Danh sách sản phẩm trống.</p>
}
