@model WNC.G06.Models.UserModel

@{
    ViewBag.Title = "Add New User";
}

<h2>Add New User</h2>

<form asp-action="AddUser" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        @Html.ValidationMessageFor(model => model.UserName)
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" type="checkbox" class="form-check-input" />
    </div>
    <div class="form-group">
        <label for="PermissionID">Chọn quyền</label>
        <select class="form-control" id="PermissionID" name="PermissionID">
            @foreach (var permission in ViewBag.Permissions as IEnumerable<WNC.G06.Models.PermissionsModel>)
            {
                <option value="@permission.PermissionID">@permission.Role</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add User</button>
</form>

